{
  "name": "sikessem/sikessem.com",
  "type": "project",
  "description": "The Sikessem Web Application",
  "keywords": ["sikessem", "web-application"],
  "license": "AGPL-3.0-only",
  "version": "0.0.0",
  "require": {
    "php": ">=8.3",
    "devdojo/auth": "^1.0",
    "laravel/folio": "^1.1",
    "laravel/jetstream": "^5.1",
    "laravel/octane": "^2.4",
    "laravel/reverb": "^1.0@beta",
    "laravel/sanctum": "^4.0",
    "laravel/tinker": "^2.9",
    "livewire/livewire": "^3.5",
    "livewire/volt": "^1.6",
    "lorisleiva/laravel-actions": "^2.8",
    "sikessem/framework": "^0.6.0",
    "sikessem/ui": "^0.8.0",
    "spatie/laravel-permission": "^6.8",
    "wendelladriel/laravel-lift": "^0.14.1"
  },
  "require-dev": {
    "alebatistella/duskapiconf": "^1.2",
    "protonemedia/laravel-dusk-fakes": "^1.6",
    "sikessem/laravel-devtools": "^0.12.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Database\\Factories\\": "database/factories/",
      "Database\\Seeders\\": "database/seeders/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    },
    "files": ["app/Helpers/Helpers.php"]
  },
  "scripts": {
    "analyse": "phpstan analyse --ansi --memory-limit=-1 --debug",
    "check": "pint --test -v",
    "debug": ["@verify", "@check", "@analyse", "@inspect", "@review", "@test"],
    "init:tools": ["psalm --init", "rector init", "pest --init"],
    "fix": ["@refactor", "@improve", "@format", "@lint"],
    "format": "psalter --issues=all",
    "improve": "phpinsights fix",
    "inspect": "psalm --no-diff",
    "lint": "pint -v",
    "post-autoload-dump": [
      "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
      "@php artisan package:discover --ansi"
    ],
    "post-create-project-cmd": [
      "@php artisan key:generate --ansi",
      "@php artisan migrate --graceful --ansi"
    ],
    "post-update-cmd": [
      "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
    ],
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "test": "pest --colors=always",
    "review": "rector --dry-run --debug",
    "refactor": "rector",
    "serve": "@php artisan octane:start",
    "start": "@php artisan octane:start --watch",
    "stop": "@php artisan octane:stop",
    "verify": "phpinsights analyse"
  },
  "extra": {
    "laravel": {
      "dont-discover": []
    }
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "php-http/discovery": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
